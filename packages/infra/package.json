{
  "name": "@app/infra",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.9",
  "exports": {
    "./db": {
      "default": "./src/db/index.ts"
    },
    "./integrations/*": {
      "default": "./src/integrations/*.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate --name=migration",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun --sql-preconnect src/db/seed.ts",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@app/config": "workspace:*",
    "@types/bun": "catalog:",
    "drizzle-kit": "^0.31.9",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@app/core": "workspace:*",
    "@aws-sdk/client-s3": "^3.990.0",
    "@aws-sdk/s3-request-presigner": "^3.990.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "pino": "^9.14.0",
    "zod": "^4.3.6"
  }
}
