{
    admin off
    auto_https off
    servers {
        trusted_proxies static private_ranges
    }
}

:{$PORT} {
    @backend path /auth /auth/* /rpc /rpc/*
    handle @backend {
        reverse_proxy http://{$SERVER_DOMAIN}:{$SERVER_PORT}
    }
    handle {
        reverse_proxy http://{$WEB_DOMAIN}:{$WEB_PORT}
    }
}
