{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build:web",
    "watchPatterns": ["apps/web/**", "packages/**"]
  },
  "deploy": {
    "startCommand": "bun run start:web",
    "overlapSeconds": 15,
    "drainingSeconds": 10
  },
  "environments": {
    "pr": {
      "deploy": {
        "overlapSeconds": 0,
        "drainingSeconds": 0,
        "sleepApplication": true
      }
    }
  }
}
