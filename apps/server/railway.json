{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build:server",
    "watchPatterns": ["apps/server/**", "packages/**"]
  },
  "deploy": {
    "preDeployCommand": "bun db:migrate && bun storage",
    "startCommand": "bun run start:server",
    "overlapSeconds": 30,
    "drainingSeconds": 15,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "environments": {
    "pr": {
      "deploy": {
        "preDeployCommand": "bun db:migrate && bun storage && bun db:seed || true",
        "overlapSeconds": 0,
        "drainingSeconds": 0,
        "restartPolicyType": "NEVER",
        "sleepApplication": true
      }
    }
  }
}
