{
  "name": "beta",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "env": "sh scripts/env.sh",
    "deploy": "sh scripts/deploy.sh",
    "cleanup": "sh scripts/cleanup.sh",
    "dev": "turbo dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @app/infra db:push",
    "db:studio": "turbo -F @app/infra db:studio",
    "db:generate": "turbo -F @app/infra db:generate",
    "db:migrate": "turbo -F @app/infra db:migrate",
    "check-types": "turbo check-types",
    "lint": "bun ultracite check",
    "lint:fix": "bun ultracite fix",
    "lint:fix:unsafe": "bun ultracite fix --unsafe",
    "build": "turbo build",
    "build:server": "turbo -F server build",
    "build:web": "turbo -F web build",
    "start": "turbo start",
    "start:server": "turbo -F server start",
    "start:web": "turbo -F web start",
    "ci": "bun lint && bun check-types && bun run build",
    "n8n:pull": "bun scripts/n8n-pull.ts",
    "n8n:push": "bun scripts/n8n-push.ts"
  },
  "catalog": {
    "typescript": "^5",
    "@types/bun": "1.3.9",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "postgres": "^3.4.8",
    "@orpc/server": "^1.13.5",
    "@orpc/client": "^1.13.5",
    "@orpc/openapi": "^1.13.5",
    "@orpc/zod": "^1.13.5",
    "zod": "^4.3.6",
    "better-auth": "^1.4.18",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@app/config": "workspace:*",
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5"
  },
  "dependencies": {
    "turbo": "^2.8.9"
  }
}
