{
  "name": "server",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.9",
  "scripts": {
    "dev": "bun --sql-preconnect run src/index.ts | bunx pino-pretty",
    "build": "bun build --compile --compile-exec-argv=\"--sql-preconnect\" src/index.ts --outfile server --minify",
    "start": "./server",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf ./server"
  },
  "devDependencies": {
    "@app/config": "workspace:*",
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.20.3"
  },
  "dependencies": {
    "@app/api": "workspace:*",
    "@app/auth": "workspace:*",
    "@app/infra": "workspace:*",
    "elysia": "^1.4.26",
    "@elysiajs/cors": "^1.4.1",
    "elysia-rate-limit": "^4.5.0"
  }
}
